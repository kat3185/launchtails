<div class="row">
  <%- if @drink.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @drink.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>New Drink</h1>

    <%= form_for @drink do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= check_box_tag(:featured) %>
      <%= label_tag(:featured, "Featured") %>

      <%= f.label :category_id %>
      <%= f.select(:category_id, Category.all.map {|a| [a.name, a.id] }) %>

      <%= f.radio_button(:alcohol_level, "Low") %>
      <%= f.label(:alcohol_level, "Low") %>
      <%= f.radio_button(:alcohol_level, "Medium") %>
      <%= f.label(:alcohol_level, "Medium") %>
      <%= f.radio_button(:alcohol_level, "High") %>
      <%= f.label(:alcohol_level, "High") %>







      <%= f.submit "Add Drink" %>
    <%- end -%>

    <%= link_to 'Create a category!', new_category_path %><br>
    <%= link_to 'Categories', categories_path %><br>
    <%= link_to 'Back to Drinks!', drinks_path %><br>
    <%= link_to 'Featured Drinks!', featured_drinks_path %>
  </div>
</div>
